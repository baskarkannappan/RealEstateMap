@inherits LayoutComponentBase
@inject NavigationManager Nav
<div class="page @(isMenuHidden ? "menu-hidden" : string.Empty)">
    <div class="sidebar" aria-hidden="@isMenuHidden">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <button type="button"
                    class="btn btn-sm btn-outline-primary menu-toggle-btn"
                    @onclick="ToggleMenu"
                    aria-label="@(isMenuHidden ? "Show menu" : "Hide menu")"
                    title="@(isMenuHidden ? "Show menu" : "Hide menu")">
                <span aria-hidden="true">@(isMenuHidden ? "☰" : "✕")</span>
            </button>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4 @(IsMapRoute ? "content-flush" : string.Empty)">
            @Body
        </article>
    </main>
</div>

@code {
    private bool isMenuHidden;

    private bool IsMapRoute => string.IsNullOrEmpty(CurrentPath) || CurrentPath.Equals("map", StringComparison.OrdinalIgnoreCase);

    private string CurrentPath => Nav.ToBaseRelativePath(Nav.Uri).TrimEnd('/');

    private void ToggleMenu()
    {
        isMenuHidden = !isMenuHidden;
    }
}
